{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Task rules */
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,

        /* Import aliases */
        "baseUrl": ".",
        "paths": {
            "@homework-task/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
